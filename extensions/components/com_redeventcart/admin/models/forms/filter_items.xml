<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter" addfieldpath="/libraries/redeventcart/form/fields">
        <field
                name="search_items"
                type="text"
                label="COM_REDCORE_FILTER_SEARCH_DESC"
                placeholder="JSEARCH_FILTER"
                class="js-enter-submits"
                />
        <field
                name="language"
                type="language"
                onchange="this.form.submit();"
                label="COM_REDEVENTCART_FILTER_LANGUAGE"
        >
            <option value="">COM_REDEVENTCART_FILTER_LANGUAGE</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="item_limit"
                type="rlimitbox"
                class="inputbox input-mini chzn"
                default="25"
                label="JGLOBAL_ORDERING_LIST_LIMIT"
                description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>
